
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/background_app"
    android:id="@+id/root_layout">

    <pl.droidsonroids.gif.GifTextView
        android:id="@+id/start_gif"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitXY"
        android:src="@drawable/go321" />

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="710dp"
        android:id="@+id/winsolo"
        app:lottie_rawRes="@raw/winnersanimation"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:visibility="gone" />




    <!--Animation of 3,2,1 go-->

    <LinearLayout
        android:id="@+id/labelsP1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="Timer"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="Round"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="85dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="Score"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_p1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/labelsP1"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/timeCountDownP1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="45"
            android:textColor="#9C27B0"
            android:textSize="36sp"
            android:background="@drawable/bgbuttons"/>

        <TextView
            android:id="@+id/questionCounterP1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@android:color/holo_purple"
            android:text="1/20"
            android:gravity="center"
            android:textColor="#C4FFFFFF"
            android:textSize="36sp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/scoreP1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textColor="#9C27B0"
            android:textSize="36sp"
            android:background="@drawable/bgbuttons"/>
    </LinearLayout>


    <Space
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/layout_p1"
        android:id="@+id/space1"/>

    <TextView
        android:id="@+id/questionTextP1"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_below="@+id/space1"
        android:background="@drawable/bgbuttons"
        android:text="1 + 1"
        android:textAlignment="center"
        android:textColor="#9C27B0"
        android:textSize="46sp"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/questionTextP1"
        android:id="@+id/space2"/>
    <ImageButton
        android:id="@+id/imgBtnPlayAgain"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="100dp"
        android:layout_below="@id/questionTextP1"
        android:layout_centerHorizontal="true"
        android:onClick="playAgain"
        android:background="@drawable/button_shape"
        android:src="@drawable/ic_replay_24dp"
        android:visibility="visible"/>

    <LinearLayout
        android:id="@+id/answersButtons"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/space2"
        android:orientation="horizontal"
        android:layout_margin="3dp">

        <Button
            android:id="@+id/answer0P1"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:background="@drawable/button_shape"
            android:onClick="checkAnswerP1"
            android:tag="0"
            android:text="Button"
            android:textSize="24sp" />

        <Button
            android:id="@+id/answer1P1"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:background="@drawable/btn_shape_orange"
            android:onClick="checkAnswerP1"
            android:tag="1"
            android:text="Button"
            android:textSize="24sp" />

        <Button
            android:id="@+id/answer2P1"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:background="@drawable/btn_shape_green"
            android:onClick="checkAnswerP1"
            android:tag="2"
            android:text="Button"
            android:textSize="24sp" />

        <Button
            android:id="@+id/answer3P1"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:background="@drawable/btn_shape_darkblue"
            android:onClick="checkAnswerP1"
            android:tag="3"
            android:text="Button"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />
    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:id="@+id/space5"/>

</RelativeLayout>