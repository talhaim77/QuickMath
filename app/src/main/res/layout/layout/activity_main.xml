<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:keepScreenOn="true"
    android:background="@drawable/background_app"
    android:weightSum="5"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/logo_iv"
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:scaleType="centerInside"
            android:background="@drawable/logo_mathbattle" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:weightSum="7"
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/layout_easy">

        <Button
            android:id="@+id/onePlayerEasy"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textAllCaps="false"
            android:background="@drawable/btn_shape"
            android:backgroundTint="@color/white"
            android:lineSpacingExtra="6dp"
            android:text="@string/oneplayer"
            android:textAlignment="center"
            android:textSize="26sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/easy_level"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:fontFamily="@font/paprika"
            android:lineSpacingExtra="6dp"
            android:text="@string/easy"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="32sp" />

        <Button
            android:id="@+id/twoPlayerEasy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="2"
            android:backgroundTint="@color/white"
            android:textAllCaps="false"
            android:background="@drawable/btn_shape"
            android:lineSpacingExtra="6dp"
            android:text="@string/twoplayer"
            android:textAlignment="center"
            android:textSize="26sp"
            android:textColor="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/layout_medium"
        android:weightSum="7">

        <Button
            android:id="@+id/onePlayerMid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:layout_marginStart="10dp"
            android:layout_weight="2"
            android:backgroundTint="@color/white"
            android:background="@drawable/btn_shape"
            android:lineSpacingExtra="6dp"
            android:text="@string/oneplayer"
            android:textAlignment="center"
            android:textSize="26sp"

            android:textColor="@color/black" />

        <TextView
            android:id="@+id/med_level"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:fontFamily="@font/paprika"
            android:lineSpacingExtra="6dp"
            android:text="@string/medium"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="32sp" />

        <Button
            android:id="@+id/twoPlayerMid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="2"
            android:backgroundTint="@color/white"
            android:textAllCaps="false"
            android:background="@drawable/btn_shape"
            android:lineSpacingExtra="6dp"
            android:text="@string/twoplayer"
            android:textAlignment="center"
            android:textSize="26sp"
            android:textColor="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:weightSum="7"
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/layout_hard">

        <Button
            android:id="@+id/onePlayerHard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textAllCaps="false"
            android:layout_weight="2"
            android:backgroundTint="@color/white"
            android:background="@drawable/btn_shape"
            android:lineSpacingExtra="6dp"
            android:text="@string/oneplayer"
            android:textAlignment="center"
            android:textSize="26sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/hard_level"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:fontFamily="@font/paprika"
            android:lineSpacingExtra="6dp"
            android:text="@string/hard"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="32sp" />

        <Button
            android:id="@+id/twoPlayerHard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="2"
            android:backgroundTint="@color/white"
            android:textAllCaps="false"
            android:background="@drawable/btn_shape"
            android:lineSpacingExtra="6dp"
            android:text="@string/twoplayer"
            android:textAlignment="center"
            android:textSize="26sp"
            android:textColor="@color/black" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:weightSum="4"
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/bestPlayerLayout">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/top_table_activity"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bgbuttons"
            android:lineSpacingExtra="6dp"
            android:text="@string/best_players"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="26sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:weightSum="4"
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/sound_layout">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/musicBtn"
            android:layout_width="60dp"
            android:layout_height="68dp"
            android:backgroundTint="@color/white"
            />


    </LinearLayout>


</LinearLayout>